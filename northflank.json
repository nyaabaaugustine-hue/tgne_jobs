{
  "name": "jobbox-northflank",
  "description": "JobBox job board application for Northflank deployment",
  "services": [
    {
      "name": "web",
      "dockerfile": "Dockerfile.northflank",
      "port": 80,
      "healthCheck": {
        "path": "/health.php",
        "port": 80,
        "interval": 30,
        "timeout": 10
      },
      "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "DB_CONNECTION": "sqlite",
        "DB_DATABASE": "/var/www/html/database/database.sqlite"
      },
      "resources": {
        "cpu": "0.1",
        "memory": "256MB"
      }
    }
  ],
  "volumes": [
    {
      "name": "storage",
      "mountPath": "/var/www/html/storage"
    },
    {
      "name": "database",
      "mountPath": "/var/www/html/database"
    }
  ]
}