modules = ["php-8.2", "vue-node-20"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"

[userenv]

[userenv.shared]
APP_NAME = "JobBox"
APP_ENV = "local"
APP_DEBUG = "true"
APP_URL = "http://0.0.0.0:5000"
APP_KEY = "base64:Omp5ltYMzn9+LpxAj63fE2Hd8qP2svGrGKf0/er+0IQ="
APP_CIPHER = "AES-256-CBC"
APP_LOCALE = "en"
APP_FALLBACK_LOCALE = "en"
APP_FAKER_LOCALE = "en_US"
